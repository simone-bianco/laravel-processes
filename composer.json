{
  "name": "simone-bianco/laravel-processes",
  "version": "1.0.0",
  "description": "Laravel package for managing process tracking with logging, status management, and context storage.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {"name": "Simone Bianco"}
  ],
  "require": {
      "php": ">=8.3",
      "illuminate/support": "^12.0",
      "illuminate/database": "^12.0",
      "spatie/laravel-package-tools": "^1.92"
  },
  "require-dev": {
      "phpunit/phpunit": "^11.5",
      "orchestra/testbench": "^10.6",
      "pestphp/pest": "^3.8",
      "pestphp/pest-plugin-laravel": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "SimoneBianco\\LaravelProcesses\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SimoneBianco\\LaravelProcesses\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "SimoneBianco\\LaravelProcesses\\LaravelProcessesServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "vendor/bin/pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
